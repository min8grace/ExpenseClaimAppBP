@page "/lineitem/detail/{Id}"
@inherits LineItemDetailBase
@attribute [Authorize]

@if (LineItem == null)
{
    <div class="spinner"></div>
}
else
{
    <h3> Line-Item Detail</h3>

    <hr />

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Claim No.
            </dt>
            <dd class="col-sm-10">
                @LineItem.ClaimId
            </dd>
            <dt class="col-sm-2">
                Category
            </dt>
            <dd class="col-sm-10">
                @Category.Name
            </dd>
            <dt class="col-sm-2">
                Payee
            </dt>
            <dd class="col-sm-10">
                @LineItem.Payee
            </dd>
            <dt class="col-sm-2">
                Date
            </dt>
            <dd class="col-sm-10">
                @LineItem.Date
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @LineItem.Description
            </dd>
            <dt class="col-sm-2">
                Amount
            </dt>
            <dd class="col-sm-10">
                @LineItem.Amount
            </dd>
            <dt class="col-sm-2">
                Currency
            </dt>
            <dd class="col-sm-10">
                @Currency.Name
            </dd>
            <dt class="col-sm-2">
                USD Amount
            </dt>
            <dd class="col-sm-10">
                @LineItem.USDAmount
            </dd>
        </dl>
    </div>
}

<button class="btn btn-outline-primary" type="button" @onclick="BackToList">
    Back to full List
</button>
<hr />

